<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:windowNoTitle="true"
    android:windowFullscreen="true"
    
    >

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tlo1"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
    />
    <TextView
        android:id="@id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="bold"  
        android:textColor="#FFFFFF"
        android:text="Wynik Twojego Snu:" />


     

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        >

         

        <TextView
            android:id="@+id/accelerometerDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer Data"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"

        />
        <TextView
            android:id="@+id/txtHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate: 0"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
        />
       

        <TextView
            android:id="@+id/volumeLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume Level"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
        />

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
     android:id="@+id/fab"
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="160dp"
     android:alpha="0.9"
  />
    
</RelativeLayout>
