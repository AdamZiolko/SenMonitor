<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_marginTop="50dp"
    android:background="#000000"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Wybierz:"
        android:layout_gravity="center"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/navigation_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Główna"
        android:layout_gravity="center"
        android:padding="6dp"
                android:layout_margin="2dp"

        android:textSize="10dp"
/>

    <Button
        android:id="@+id/navigation_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj sen"
        android:layout_gravity="center"
        android:padding="6dp"
                android:layout_margin="2dp"

        android:textSize="10dp" 
/>

    <Button
        android:id="@+id/navigation_page3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statystyki"
        android:layout_gravity="center"
        android:padding="6dp" 
                android:layout_margin="2dp"

        android:textSize="10dp"
/>

    <Button
        android:id="@+id/navigation_page4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raporty"
        android:layout_gravity="center"
        android:padding="6dp"
                android:layout_margin="2dp"

        android:textSize="10dp"
/>

    <Button
        android:id="@+id/navigation_page5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:layout_gravity="center"
        android:padding="6dp" 
        android:textSize="10dp"
        android:layout_margin="2dp"
/>

    <!-- Dodaj przyciski dla innych opcji -->

</GridLayout>



