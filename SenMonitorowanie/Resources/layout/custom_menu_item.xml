<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_marginTop="50dp"
    android:padding = "7dp"
    android:background="@drawable/round_menu"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="OPCJE:"
        android:layout_gravity="center"
        android:padding="3dp" 
        android:layout_margin="2dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" 
                      
        />

    <Button
        android:id="@+id/navigation_home"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Główna"
        android:layout_gravity="center"
        android:padding="3dp" 
        android:layout_margin="2dp"
        android:background="@drawable/menu_button"
        android:textSize="10dp"
/>

    <Button
        android:id="@+id/navigation_page2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Dodaj sen"
        android:layout_gravity="center"
        android:padding="3dp" 
        android:layout_margin="2dp"
        android:background="@drawable/menu_button"
        android:textSize="10dp" 
/>

    <Button
        android:id="@+id/navigation_page3"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Statystyki"
        android:layout_gravity="center"
        android:padding="3dp" 
                android:layout_margin="2dp"
        android:background="@drawable/menu_button"

        android:textSize="10dp"
/>

    <Button
        android:id="@+id/navigation_page4"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Raporty"
        android:layout_gravity="center"
        android:padding="3dp" 
                android:layout_margin="2dp"
        android:background="@drawable/menu_button"

        android:textSize="10dp"
/>

    <Button
        android:id="@+id/navigation_page5"
        android:text="Ustawienia"
        android:layout_gravity="center"
        android:padding="3dp" 
        android:textSize="10dp"
        android:layout_margin="2dp"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/menu_button"

/>

    <!-- Dodaj przyciski dla innych opcji -->

</GridLayout>



