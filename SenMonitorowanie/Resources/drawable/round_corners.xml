<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
	<gradient
        android:startColor="#008080"   
	android:endColor="#00FFFF"    
	android:type="linear"           
	android:angle="45"/>         

	<corners android:radius="8dp"/>    <!-- Promień zaokrąglenia narożników -->

	<padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp"/>         <!-- Dodatkowy margines dla cienia -->

	<size
        android:width="200dp"
        android:height="100dp"/>        <!-- Rozmiar kształtu -->

	<corners
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="8dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"/> <!-- Różne promienie dla różnych narożników -->

	<stroke
        android:width="2dp"
        android:color="#000000"/>        <!-- Obramowanie kształtu -->


</shape>
